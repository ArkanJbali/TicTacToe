<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_style"
    >
    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/scoreboard"
        android:textSize="40dp"
        android:textAlignment="center"
        android:textColor="@color/whiteBTN"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:layout_marginTop="40dp"/>
    <TextView
        android:id="@+id/header2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="History"
        android:layout_below="@id/header"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textColor="@color/whiteBTN"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        />
    <TextView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header2"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/scoreboard_style"
        android:textStyle="bold"
        android:textColor="@color/whiteBTN"
        android:fontFamily="serif-monospace"
        android:text="Date       Player1 win loss Player2 win loss"
        />
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_below="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/scoreboard_style">
        <TableLayout
            android:id="@+id/table_ly"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        </TableLayout>
    </ScrollView>
    <Button
        android:layout_marginTop="40dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/goBack"
        android:background="@drawable/buttons_main"
        android:textColor="@color/whiteBTN"
        android:text="@string/goHome"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>